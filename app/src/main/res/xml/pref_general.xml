        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/pref_description_use_real_location"
        android:title="@string/pref_title_use_real_location" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_server_address_titles"
